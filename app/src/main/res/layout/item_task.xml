<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_task_item"
    android:layout_marginBottom="12dp">

    <!-- Project Name -->
    <TextView
        android:id="@+id/textProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grocery shopping app design"
        android:textSize="14sp"
        android:textColor="#7A7F8C" />

    <!-- Task Name -->
    <TextView
        android:id="@+id/textTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market Research"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:textColor="#1B1D28" />

    <!-- Time + Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00 AM"
            android:textSize="14sp"
            android:textColor="#7A7F8C" />

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="13sp"
            android:textStyle="bold"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/bg_status_done"
            android:textColor="#6A4CFF"
            android:layout_marginStart="14dp" />

    </LinearLayout>

</LinearLayout>
