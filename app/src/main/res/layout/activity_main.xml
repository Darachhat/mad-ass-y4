<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_main_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Bar -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="6dp" />

        <TextView
            android:text="Todayâ€™s Tasks"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/ic_profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="6dp" />
    </LinearLayout>


    <!-- Date Row -->
    <HorizontalScrollView
        android:fillViewport="true"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!-- Date Item -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="70dp"
                android:layout_height="match_parent">

                <TextView
                    android:text="May"
                    android:textColor="#555"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="23"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Fri"
                    android:textColor="#999"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Selected Date -->
            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/bg_date_selected"
                android:layout_marginLeft="12dp"
                android:layout_width="70dp"
                android:layout_height="match_parent">

                <TextView
                    android:text="May"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="25"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Sun"
                    android:textColor="#fff"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>


    <!-- Filter Tabs -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/tabAll"
            android:text="All"
            android:textColor="#fff"
            android:background="@drawable/bg_tab_selected"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/tabTodo"
            android:text="To do"
            android:textColor="#777"
            android:background="@drawable/bg_tab_unselected"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/tabProgress"
            android:text="In Progress"
            android:textColor="#777"
            android:background="@drawable/bg_tab_unselected"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/tabDone"
            android:text="Completed"
            android:textColor="#777"
            android:background="@drawable/bg_tab_unselected"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1" />
    </LinearLayout>


    <!-- Task List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTasks"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="120dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <!-- Floating Add Button -->
    <ImageView
        android:id="@+id/btnAddTask"
        android:src="@drawable/ic_add"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp" />


    <!-- Bottom Navigation -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_bottom_bar"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/navHome"
            android:src="@drawable/ic_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp" />

        <ImageView
            android:id="@+id/navCalendar"
            android:src="@drawable/ic_calendar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp" />

        <ImageView
            android:id="@+id/navAdd"
            android:src="@drawable/ic_add"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="15dp" />

        <ImageView
            android:id="@+id/navProjects"
            android:src="@drawable/ic_projects"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp" />

        <ImageView
            android:id="@+id/navProfile"
            android:src="@drawable/ic_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp" />
    </LinearLayout>

</LinearLayout>
